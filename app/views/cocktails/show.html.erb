<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <h1>
        <%= @cocktail.name %>
      </h1>

      <p>
        -------------------------------------
        <table class="table table-striped ingredient">
          <ul class= "list-unstyled">
          <% @cocktail.doses.each do |doses| %>
          <li><%= doses.description %> of <%= doses.ingredient.name %></li>
          <% end %>
          ----------------------------------------
          </ul>

        </table>
      </p>

      <div class = "new_ingredient">
      <h3> Add an ingredient:</h2>

      <%= simple_form_for [@cocktail, @dose] do |f| %>

      <%= f.input :description %>
      <%= f.association :ingredient, collection: Ingredient.all %>
      <%= f.button :submit, class: "btn btn-primary"%>
      <% end %>

      <%= link_to 'Back', cocktails_path %> |
      <%# link_to 'Destroy', cocktail_path, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to cocktail_path(@cocktail), method: :delete do %>
      <i class="fa fa-trash"></i>
      <%end %>
      </div>
    </div>
  </div>
</div>
