<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class ="background">
      <p id="notice"><%= notice %></p>

      <h1>Cocktails</h1>

      <table class = "table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cocktails.each do |cocktail| %>
          <tr>
            <td><%= cocktail.name %></td>
            <td><%= link_to 'Show', cocktail %></td>
            <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      </div>
    </div>
  </div>
</div>
