<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <h1>New Cocktail</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>

      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit %>
      <% end %>


      <%= link_to 'Back', cocktails_path %>

    </div>
  </div>
</div>
